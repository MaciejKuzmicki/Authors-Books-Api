@{
    ViewData["Title"] = "Home Page";
}


<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-0 text-center">

    @foreach (var item in Model)
    {

        <div class="card" style="width:19rem; padding:10px;margin:10px; border-radius:20px">

                <div class="card-body">
                    <h5 class="card-title" style="font-family:sans-serif; color:black">@item.Title</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Author: @item.Author.Name @item.Author.Surname</li>
                        <li class="list-group-item">Book Description: @item.Description</li>
                    </ul>
                </div>
                <div class="row mb-3">
                    <div class="col d-grid">
                        <a type="button" asp-action="Edit" asp-controller="Api" asp-route-id="@item.Id" style="border-radius:20px" class="btn btn-outline-primary">Edit</a>
                    </div>
                    <div class="col d-grid">
                    <a type="button" asp-controller="Api" asp-action="Delete" asp-route-id="@item.Id" style="border-radius:20px" class="btn btn-outline-secondary">Delete</a>
                    </div>
            </div>
        </div>

    }
</div>
<br/>