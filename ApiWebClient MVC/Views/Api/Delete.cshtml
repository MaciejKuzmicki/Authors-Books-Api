@model ApiWebClient.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h4 class=" display-6 rounded text-center  p-3">Are you sure you want to delete this book?</h4>

<div class="card mx-auto text-center" style="padding:20px; border-radius:20px;max-width:500px; align-content:center; margin:auto">
    <h5 class="card-title" style="font-family:sans-serif; color:black">@Model.Title</h5>

    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Author: @Model.Author.Name @Model.Author.Surname</li>
            <li class="list-group-item">Book Description: @Model.Description</li>
        </ul>
    </div>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
    </form>
</div>
